@page
@model SupermarketWEB.Pages.PayModes.IndexModel
@{
    ViewData["Title"] = "Pay Modes";
}

<h1>Pay Modes</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PayMode[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.PayMode[0].Observation)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PayMode)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Observation</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>