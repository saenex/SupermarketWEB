@page
@model SupermarketWEB.Pages.Invoices.IndexModel
@{
    ViewData["Title"] = "Index Invoices";
}

<h1>Index Invoices</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Invoices[0].Number)</th>
            <th>Customer</th>
            <th>@Html.DisplayNameFor(model => model.Invoices[0].Date)</th>
            <th>Pay Mode</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoices)
        {
            <tr>
                <td>@item.Number</td>
                <td>@item.Customer.FirstName @item.Customer.LastName</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.PayMode.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
