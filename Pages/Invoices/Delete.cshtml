@page
@model SupermarketWEB.Pages.Invoices.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Invoice.Customer.FirstName</dd>

        <dt class="col-sm-2">Pay Mode</dt>
        <dd class="col-sm-10">@Model.Invoice.PayMode.Name</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Invoice.Date.ToShortDateString()</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Invoice.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-primary">Back to List</a>
    </form>
</div>